<%= f.hidden_field :tip_id, :value => params[:id] %>
 <%= f.hidden_field :user_id,:value => current_user.id %>
 <div class="field">
    <%= f.label :tag_tip,'Tag tip for Progress Journal (for your eyes only):' %>
    <% [ 'Shows I am improving ', 'Dont know/dont care', 'Shows I need to improve ' ].each do |theme| %>
      <br><%= radio_button_tag 'theme', theme, @theme == theme %>
      <%= theme.humanize %>
    <% end %>
}
</div>

 <div class="field">
  <%= f.label :tag_tip,'Tag tip for Progress Journal (for your eyes only):' %>
  <br>  
    <%= f.text_area :tag_tip %>
  </div>


  <div class="field">
    <%= f.label :response_for_tip %><br>
    <%= f.text_area :response_for_tip %>
  </div>
  


  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
