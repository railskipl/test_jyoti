<%= form_for(@response_tip) do |f| %>
  <% if @response_tip.errors.any? %>
    <div id="error_explanation">
      
      <% @response_tip.errors.full_messages.each do |message| %>
        <p class="alert-box"><%= message %></p>
      <% end %>
    </div>
  <% end %>
