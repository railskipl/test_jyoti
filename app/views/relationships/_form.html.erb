<%= form_for(@relationship) do |f| %>
  <% if @relationship.errors.any? %>
    <div id="error_explanation">
      
      <% @relationship.errors.full_messages.each do |message| %>
        <p class="alert-box"><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <%= f.hidden_field :user_id,:value => current_user.id %>
  <%= f.hidden_field :relation_checked, :value => true %>


  <!-- <div class="field"> -->
   <!-- <%#= f.label :email %> -->
   <%#= f.collection_select :email, Contact.where("user_id = ?", current_user.id).all, :email, :email %>  
   <%#= f.text_field :email %>   
  <!-- </div> -->


     <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
     </div>
     



     <div class="field">
           <%= f.label :name,"Primary Circle" %>
           <%= f.collection_select :name, Circle.all, :name, :name, {prompt: "Choose One"},:style=>"width:13%";%>
     </div>
  


      <div class="field">
            <%= f.label :how_well_you_know_the_person,"How Well You Know The Person:" %>
            <%= f.select :how_well_you_know_the_person, options_for_select([['Choose One', ''], ['Extremely well', '8'], ['Very well', '7'], ['well', '6'], ['Above Average', '5'], ['Below Average', '4'], ['Little', '3'], ['Very Little', '2'], ['Not at all', '1']]),:style=>"width:15%"; %>
              
      </div>


      <div class="field">
            <%= f.label :your_influence_on_the_persons_future,"Your Influence On The Person's Future:" %>
            <%= f.select :your_influence, options_for_select([['Choose One', ''], ['Extremely High', '8'], ['Very High', '7'], ['Very High', '6'], ['Above Average', '5'], ['Below Average', '4'], ['Low', '3'], ['Very Low', '2'], ['None', '1']]) %>
      </div>


      <div class="field">
            <%= f.label :Their_influence_on_your_future,"The Person's Influence On Your  Future:" %>
            <%= f.select :influence_on_your, options_for_select([['Choose One', ''], ['Extremely High', '8'], ['Very High', '7'], ['Very High', '6'], ['Above Average', '5'], ['Below Average', '4'], ['Low', '3'], ['Very Low', '2'], ['None', '1']]) %> 
      </div>

      <div class="field">  
            <%= f.hidden_field :how_long_you_know_each_other_avg %>  
      </div>

      <div class="actions">
            <%= f.submit "Submit", :class=>"btn btn-primary" %>
      </div>
      
        
<% end %>
  





