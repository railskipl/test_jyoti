<h2>Editing Page</h2>
<div class="col-xs-4">
<%= form_for @page  do |f| %>

	<p>
    <b><%= f.label :title %></b><br />
    <%= f.text_field :title, :class => 'text' %>
   </p>
 
  <div class="field">
  <p>
    <b><%= f.label :body %></b><br />
    <%= f.text_area :body,:rows=>7, :cols=>20,:style=> "width: 350px;" %>
  </p>
  </div>
   <%= f.file_field :photo %>
  
   <div class="actions">
  <%= f.submit "Update",:class=>"btn btn-primary"  %>
  </div>

<% end %>
</div>