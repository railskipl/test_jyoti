<div class="container">

<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="col-xs-4">
  <%= f.hidden_field :invitation_token %>

    <%= devise_error_messages! %>

    <div><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,:class=>"form-control" %></div>

    <div><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off",:class=>"form-control" %></div>

    <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"form-control" %></div>

    <div><%= f.submit "Sign up",:class=>"btn btn-primary"  %></div>
    <%= render "devise/shared/links" %>
     <% end %></br>

   

   <!-- Code of Popup window For Help us -->

   <%= javascript_include_tag "jquery.js","bootstrap.js" %>
   
      <!-- Button to trigger modal -->
      <a href="#myModal" role="button" class="btn btn-info btn-small" data-toggle="modal">Help Us Improve</a>
       </div>
      <!-- Modal -->
      <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Help Us</h3>
      </div>
      <div class="modal-body">
      <%= form_for Feedback.new do |f| %>
              <div class="control-group">
                <label for="inputName" class="control-label">Name</label>
                <div class="controls">
                  <%= f.text_field :name,:placeholder=>"Name", :id=>"inputName" %>
                </div>
              </div>
              <div class="control-group">
                <label for="inputEmail" class="control-label">Email</label>
                <div class="controls">
                  <%= f.text_field :email,:placeholder=>"Email", :id=>"inputEmail" %>
                </div>
              </div>

              <div class="control-group">
                <label for="inputDescription" class="control-label">Feedback</label>
                <div class="controls">
                  <%= f.text_area :description,:placeholder=>"Feedback", :id=>"inputDescription" %>
                </div>
              </div>
              <div class="control-group">
                <div class="controls">
                  
                  <button class="btn" type="submit">Submit</button>
                  
                </div>
              </div>
              <% end %>
      </div>
      
      </div>

</div>
  

