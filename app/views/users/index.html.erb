<table class="table table-bordered"> 
    <tr>
      <th>Email</th>
      <th>Action</th>
    </tr>
  
   <% @emails.each do |email| %>
      <tr>
        <td><%= email.email rescue nil%></td>
           <% if email.verified %>
         <td><p>merge with primary</p><%= link_to format_boolean(email.merged?), {:controller => 'emails', :action => 'merge', :id => email.id} %></td>

         <td><p>make primary</p><%= link_to format_boolean(email.primary?), {:controller => 'emails', :action => 'primary', :id => email.id} %></td>
         <% else %>
         <td><p>Email is not veriifed</p></td>
         <td><p>Email should be veriifed to make primary</p></td>
        <% end %>

        
      </tr>
   
 <%end%>
</table>