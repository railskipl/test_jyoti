  <td><a class="button button-small" href="#"> <span>Current Plan</span> </a></td>
  <% else %>
  <td><%= link_to image_tag("/assets/paypal.png"),paypal_checkout_path(plan_id: @subscription.plan_id) %>
    <% end %>
