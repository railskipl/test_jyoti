
<h5>Link/Unlink Email</h5>
<table class="table table-bordered"> 
    <tr>
      <th>Email</th>
      <th>Merge with primary email</th>
      <th colspan="3">Actions</th>
    </tr>
  
   <% @users.each do |user| %>
      <tr>
        <td><%= user.secondary_email %></td>
        <td><%= link_to format_boolean(user.status?),{:controller => 'users', :action => 'toggled_status', :id => user.id} %></td>
        <td><%= link_to "messages",:controller=>"users",:action=>"index" %></td>

      </tr>
    <% end %>
 
</table>


 