    </div>
  <%else%>
    <div class="field">
      <%= f.label :email %><br>
      <%#= f.collection_select :email, User.all, :email, :email%>
      <%= f.text_area :email,:class=>"form-control11", :maxlength => 500  %><label for="male">The Person You're Commenting On</label>
    </div>
  <%end%>

  <div class="field">
    <%= f.label :praise %><br>
    <%= f.text_field :praise,:class=>"form-control11" %>
  </div>

  <div class="field">
    <%= f.label :criticism %><br>
    <%= f.text_field :criticism,:class=>"form-control11" %>
  </div>

  <div class="field">
    <%= f.label :general %><br>
    <%= f.text_field :helpful,:class=>"form-control11"%>
  </div>

  <% unless user_signed_in? %>
   <% else %>
    <%= f.hidden_field :user_id,:value => current_user.id %>
   <% end  %>

  <div class="actions">
    <%= f.submit "Save" ,:class => "btn btn-primary"%></div>
    
