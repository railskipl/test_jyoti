<%= form_for(@tip) do |f| %>
  <% if @tip.errors.any? %>
    <div id="error_explanation">

      
      <% @tip.errors.full_messages.each do |message| %>
        <p class="alert-box"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <% if params[:email]%>
    <%= f.hidden_field :email,:value => params[:email] %>
    <%= f.hidden_field :name, :value => params[:name]%>
    <%= f.hidden_field :relationship_id,:value => params[:relationship_id] %>
    <%= f.hidden_field :rating, :value => "true"%>
  <%end%>

  <div class="field">
   <%= f.label :praise %><br>
    <i style="color: #B8B8B8;"><label for="male">Maximum Character Length is 30</label></i><br>
    <%= f.text_area :praise,:placeholder => "Type in your praise here",:class=>"form-control11", :maxlength => 30 %><br>
  </div>

  <div class="field">
    <%= f.label :criticism %><br>
    <i style="color: #B8B8B8;"><label for="male">Maximum Character Length is 30</label></i><br>
    <%= f.text_area :criticism,:placeholder => "Type in your criticism here",:class=>"form-control11", :maxlength => 30 %><br>
  </div>

  <div class="field">
    <%= f.label :general %><br>
    <i style="color: #B8B8B8;"><label for="male">Maximum Character Length is 30</label></i><br>
    <%= f.text_area :helpful,:placeholder => "Type in your helpful tips here",:class=>"form-control11", :maxlength => 30%><br><br>
  </div>

  <% unless user_signed_in? %>
   <% else %>
    <%= f.hidden_field :user_id,:value => current_user.id %>
   <% end %>

  <div class="actions">
    <%= f.submit "Save" ,:class => "btn btn-primary"%>
    <%= link_to "Skip",new_ratingother_path ,:class => "btn btn-primary"%></div>
    
<% end %>


