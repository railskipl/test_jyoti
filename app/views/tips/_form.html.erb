      <h2><%= pluralize(@tip.errors.count, "error") %> prohibited this tip from being saved:</h2>

      <ul>
      <% @tip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if params[:email]%>
    <div class="field">
       <%= f.label :email %><label for="male">The Person You're Commenting On</label><br>
      <%= f.text_area :email,:value => params[:email],:class=>"form-control11", :maxlength => 500 %>
