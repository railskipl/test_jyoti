<%= form_for(@trial_day) do |f| %>
  <% if @trial_day.errors.any? %>
    <div id="error_explanation">
      
      <% @trial_day.errors.full_messages.each do |message| %>
        <p class="alert-box"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :days %><br>
    <%= f.number_field :days %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
