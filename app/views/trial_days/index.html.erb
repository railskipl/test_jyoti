<h1>Listing trial_days</h1>

<table>
  <thead>
    <tr>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trial_days.each do |trial_day| %>
      <tr>
        <td><%= trial_day.days %></td>
        <td><%= link_to 'Show', trial_day %></td>
        <td><%= link_to 'Edit', edit_trial_day_path(trial_day) %></td>
        <td><%= link_to 'Destroy', trial_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

